@model IEnumerable<Sprint2.Models.Compra>

@{
    ViewData["Title"] = "Compras";
}

<h1>Compras</h1>

<p>
    <a asp-action="Create">Criar Compra</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroNota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroNota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                    <a asp-controller="ItemCompras" asp-action="Index" asp-route-id="@item.CompraId">Itens</a> |
                <a asp-action="Edit" asp-route-id="@item.CompraId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CompraId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.CompraId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
